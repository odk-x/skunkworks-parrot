<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CreateGroupController">
    <children>
        <VBox prefHeight="540.0" prefWidth="713.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label text="Group Name" />
                <TextField fx:id="name_field" prefHeight="31.0" prefWidth="450.0" />
                <HBox alignment="CENTER_LEFT" prefWidth="560.0">
                    <children>
                        <Button fx:id="createGroupButton" mnemonicParsing="false" onMouseClicked="#createButtonClicked" prefHeight="31.0" prefWidth="117.0" text="Create" />
                        <ProgressIndicator fx:id="progressIndicator" prefHeight="31.0" prefWidth="63.0" progress="0.0" visible="false">
                            <HBox.margin>
                                <Insets left="20.0" right="20.0" />
                            </HBox.margin>
                        </ProgressIndicator>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" top="30.0" />
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefWidth="560.0">
                    <VBox.margin>
                        <Insets bottom="10.0" top="5.0" />
                    </VBox.margin>
                    <children>
                        <Label fx:id="statusLabel" prefHeight="21.0" prefWidth="611.0" />
                        <Button fx:id="clipboardButton" onMouseClicked="#copyToClipboardClicked" prefHeight="31.0" prefWidth="250.0" scaleShape="false" text="Copy to clipboard">
                        </Button>
                    </children>
                </HBox>
                <ImageView fx:id="qrView" fitHeight="267.0" fitWidth="361.0" pickOnBounds="true" preserveRatio="true" />
                <Button fx:id="saveImageButton" mnemonicParsing="false" onMouseClicked="#saveImageButtonClicked" prefHeight="31.0" prefWidth="122.0" text="Save As Image" />
            </children>
        </VBox>
    </children>
</AnchorPane>
